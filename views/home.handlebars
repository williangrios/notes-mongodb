<h1>Suas notas</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each notes}}
        <tr>
            <th scope="row">{{@index}}</th>
            <th class="title-column"><a href="notes/{{this._id}}">{{this.title}}</a></th>
            <th class="actions-column">
                <a href="notes/edit/{{this._id}}" class="btn btn-primary">Editar</a>
                <form action="notes/delete" method="POST">
                    <input type="hidden" name="id" value="{{this._id}}">
                    <input type="submit" class="btn btn-danger" value="Remover">
                </form>
            </th>
        </tr>
        {{else}}
            <p>Do not have any notes</p>
        {{/each}}
    </tbody>
</table>